
@{
    Layout = null;
}

<div ng-controller="DealController">
    <br/>
    <h2 style="text-transform: capitalize;">{{ deal.Title }}</h2>
    <br/>
    <div class="row">
        <div class="col-md-8">
            <div class="deal-box" ng-bind-html="deal.DealDesc">
            </div>
            <br/>
            @Html.Partial("_DealFooter")
        </div>
        <div class="col-md-4">
            <!-- Most viewed deals -->
            <div class="most-viewed">
                <h4>Most viewed deals</h4>

                <ul style="list-style-type: none; margin: 0; padding: 0;">
                    <li style="margin-bottom: 10px; border-bottom: 1px solid #f7f7f7; padding-bottom: 10px;" ng-repeat="item in mostViewed">

                        <a href="#/deals/{{ item.DealSlug }}">{{ item.Title }}</a>
                    </li>
                </ul>

            </div>

        </div>
    </div>

</div>