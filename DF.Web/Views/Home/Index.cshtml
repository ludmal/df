<script>
    function search() {
        if ($('#search_text').val() === '') {
            return;
        }

        window.location = '/home/search?q=' + encodeURIComponent($('#search_text').val());
    }

    $(document).ready(function() {
        $(document).keypress(function(e) {
            if (e.which == 13) {
                $("#btnSearch").click();
            }
        });

    });

</script>
