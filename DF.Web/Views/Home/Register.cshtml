
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@model DF.Web.Controllers.RegisterModel

<div class="deal-box">
    @using (@Html.BeginForm("Register", "Home", FormMethod.Post))
    {

        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            <p>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control title" })

            </p>
        </div>
        <div class="form-group">
            <p>Email</p>
            <p>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control title" })

            </p>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            <p>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control title" })

            </p>
        </div>
        <button type="submit" class="btn btn-success">Register</button>

    }
</div>