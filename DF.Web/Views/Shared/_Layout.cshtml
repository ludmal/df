@using System.Web.Optimization
@using System.Web.UI.WebControls

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/styles")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha256-3dkvEK0WLHRJ7/Csr0BZjAWxERc5WH7bdeUya2aXxdU= sha512-+L4yy6FRcDGbXJ9mPG8MT/3UCDzwR9gPeyFNMCtInsol++5m3bk2bXWKdZjvybmohrAsn3Ua5x8gfLnbE1YkOg==" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-default">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><span class="deal">DealFinder</span><span class="finder">.lk</span></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @Html.Partial("_Nav")
            </div><!--/.nav-collapse -->
        </div>
    </nav>
<div class="sub-head">
    <div class="sub-content">
        <h1>One site for all the deals.</h1>
        @Html.Partial("_Search")
    </div>
</div>
    <div class="spacer"></div>
<div class="cat-menu">
    <div class="container cat-menu">
        <ul class="nav nav-tabs head-nav">
            <li class="@(@ViewBag.Category == "top" ? "head-tab-active" : "")"><a href="/category/top">Top Deals</a></li>
            <li class="@(@ViewBag.Category == "dining" ? "head-tab-active" : "")"><a href="/category/dining">Dining</a></li>
            <li class="@(@ViewBag.Category == "happy-hour" ? "head-tab-active" : "")"><a href="/category/happy-hour">Happy Hour</a></li>
            <li class="@(@ViewBag.Category == "accomodation" ? "head-tab-active" : "")"><a href="/category/accomodation">Accomodation</a></li>
            <li class="@(@ViewBag.Category == "health-beauty" ? "head-tab-active" : "")"><a href="/category/health-beauty">Health & Beauty</a></li>
            <li class="@(@ViewBag.Category == "travel-leisure" ? "head-tab-active" : "")"><a href="/category/travel-leisure">Travel & Leisure</a></li>
            <li class="@(@ViewBag.Category == "fashion" ? "head-tab-active" : "")"><a href="/category/fashion">Fashion</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">More<i class="btr bt-angle-down nav-icon"></i></a>
                <ul class="dropdown-menu">
                    <li><a href="/category/home-essentials">Home Essentials</a></li>
                    <li><a href="/category/electronics">Electronics</a></li>
                    <li><a href="/category/other">Other</a></li>
                </ul>
            </li>
            
        </ul>
    </div>
</div>
    <div class="container page">
        @RenderBody()
    </div>
    @Html.Partial("_Footer")
    @Scripts.Render("~/scripts/g")
<script>
    function search() {
        window.location = '/search/' + encodeURIComponent($('#search_text').val());
    }

    $(document).ready(function() {
        $(document).keypress(function(e) {
            if (e.which == 13) {
                $("#btnSearch").click();
            }
        });

    });

</script>

    <script type="text/javascript">var switchTo5x = true;</script>
    <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
    <script type="text/javascript">stLight.options({ publisher: "2fab054b-6cc5-4a49-9806-2e84a0babb25", doNotHash: false, doNotCopy: false, hashAddressBar: false });</script>
</body>
</html>
